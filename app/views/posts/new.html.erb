<div class="display-6 mb-4">
  <h1>New Post</h1>
</div>


  <%= form_with :model => @post do |form| %>
    <div class="mb-4">
      <%= form.label "title" %>
      <%= form.text_field "title" %>
    </div>
    <div class="mb-4">
      <%= form.label "description" %>
      <%= form.text_field "description" %>
    </div>
    <div class="mb-4">
      <%= form.label "posted_on" %>
      <%= form.date_field "posted_on" %>
    </div>
    <div class="mb-4">
      <%= form.submit "Create Post", :class => "btn btn-primary" %>
    </div>
    <%= form.hidden_field "place_id" %>
  <% end %>

