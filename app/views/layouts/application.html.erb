<!DOCTYPE html>
<html>
  <head>
    <title>Tacostagram Final</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css">
  </head>

  <body>
  <nav class="navbar navbar-expand-lg bg-light">
  <div class="container-fluid">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <% if @current_user %>
            <a class="nav-link active" aria-current="page" href="/places">Home</a>
          <% else %>
            <a class="nav-link active" aria-current="page" href="/login">Home</a>
          <% end %>
        </li>
      </ul>

      <ul class="navbar-nav mb-2 mb-lg-0">
          <% if @current_user %>
            <li class="nav-item">Logged in as: <%= @current_user["username"] %></li>
            <li class="nav-item"><a href="/logout" class="nav-link">Logout</a></li>
          <% else %>
            <li class="nav-item"><a href="/login" class="nav-link">Login</a></li>
            <li class="nav-item"><a href="/users/new" class="nav-link">Sign Up</a></li>
          <% end %>
        </div>
    </div>
  </div>
</nav>

  <div class="container pt-4">
    <div class="row">
      <div class="col text-center">
        <%= flash["notice"] %>
      </div>
    </div>
      <%= yield %>
  </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
